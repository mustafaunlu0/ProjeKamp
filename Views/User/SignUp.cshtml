@model ProjeKamp.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/signUp.css" asp-append-version="true" />
</head>
<body>

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<section id="login">
    <div class="container">
    	<div class="row">
    	    <div class="col-xs-12">
        	    <div class="form-wrap">
                <h1>Formu doldur ve aramıza katıl!</h1>
                    <form role="form" asp-action="SignUp" id="login-form" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName" class="sr-only">Ad</label>
                            <input asp-for="UserName" type="text"  class="form-control" placeholder="Ad">
                            <span asp-validation-for="UserName" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="UserLastName"  class="sr-only">Soyad</label>
                            <input  asp-for="UserLastName" type="text"  class="form-control" placeholder="Soyad">
                            <span asp-validation-for="UserLastName" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="UserEmail"  class="sr-only">Email</label>
                            <input asp-for="UserEmail" type="email"  class="form-control" placeholder="somebody@example.com">
                            <span asp-validation-for="UserEmail" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="UserPassword" for="key" class="sr-only">Password</label>
                            <input asp-for="UserPassword" type="password"  class="form-control" placeholder="Password">
                            <span asp-validation-for="UserPassword" class="text-danger"></span>

                        </div>
                        <div class="checkbox">
                            <span class="character-checkbox" onclick="showPassword()"></span>
                            <span class="label">Show password</span>
                        </div>
                        <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Kaydol">
                    </form>
                    <a href="javascript:;" class="forget" data-toggle="modal" data-target=".forget-modal">Hesabın var mı?</a>
                    <hr>
        	    </div>
    		</div> <!-- /.col-xs-12 -->
    	</div> <!-- /.row -->
    </div> <!-- /.container -->
</section>

<div class="modal fade forget-modal" tabindex="-1" role="dialog" aria-labelledby="myForgetModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">×</span>
					<span class="sr-only">Close</span>
				</button>
				<h4 class="modal-title">Recovery password</h4>
			</div>
			<div class="modal-body">
				<p>Type your email account</p>
				<input type="email" name="recovery-email" id="recovery-email" class="form-control" autocomplete="off">
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-custom">Recovery</button>
			</div>
		</div> <!-- /.modal-content -->
	</div> <!-- /.modal-dialog -->
</div> <!-- /.modal -->


    <script src="~/js/signUp.js"></script>

</body>
</html>
