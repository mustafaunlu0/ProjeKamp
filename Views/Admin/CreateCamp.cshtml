@model ProjeKamp.Models.Post

<!DOCTYPE html>
<html lang="en">
  <head>
    <head>
      <meta charset="utf-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta
        name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no"
      />
      <meta name="description" content="" />
      <meta name="author" content="" />

      <title>Proje Kamp - Create Camp</title>

      <!-- Custom fonts for this template-->
      <link
        href="~/vendor/fontawesome-free/css/all.min.css"
        rel="stylesheet"
        type="text/css"
      />
      <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet"
      />
        <link
        href="~/vendor/datatables/dataTables.bootstrap4.min.css"
        rel="stylesheet"
      />


      <!-- Custom styles for this template-->
      <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />

      <script src="~/js/panel/header/header.js"></script>
      <script src="~/js/panel/sidebar/sidebar.js"></script>
      <script src="~/js/panel/footer/footer.js"></script>
    </head>
  </head>
  <body id="page-top">
    <div id="wrapper">
      <my-sidebar></my-sidebar>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <my-Header></my-Header>

          <div class="container-fluid">
           
              <form asp-action="CreateCamp" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
            <div class="form-group">
                <label asp-for="PostName" class="control-label"></label>
                <input asp-for="PostName" class="form-control" />
                <span asp-validation-for="PostName" class="text-danger"></span>
            </div>
            <div class="col-6">
            <div class="form-group">
                <label for="city">İl</label>
                  <select asp-for="PostCity" id="city" class="form-control mb-3"></select>
                  <span asp-validation-for="PostCity" class="text-danger"></span>
            </div>
            </div>
             <div class="col-6">
            <div class="form-group">
                <label for="district">İlçe</label>
                  <select  asp-for="PostCounty" id="district" class="form-control mb-3"></select>
                  <span asp-validation-for="PostCounty" class="text-danger"></span>
            </div>
            </div>
            <div class="col-6">
            <div class="form-group">
                <label asp-for="PostDate"  class="control-label"></label>
                <input asp-for="PostDate" type="date" class="form-control" />
                <span asp-validation-for="PostDate" class="text-danger"></span>
            </div>
            </div>
            <div class="col-6">
            <div class="form-group">
                <label asp-for="PostHour" class="control-label"></label>
                <input asp-for="PostHour" type="time" class="form-control" />
                <span asp-validation-for="PostHour" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group postUri" >
                <div class="custom-file">
                 <input  asp-for="PostUri" class="custom-file-input" value="uri" />
                </div>
                <span asp-validation-for="PostUri" class="text-danger"></span>
            </div>
            <div class="col-3">
            <div class="form-group">
            <label asp-validation-for="PostImage" class="control-label">Image</label>
                <div class="custom-file">
                 <input type="file" class="form-control-file" asp-for="PostImage">
                </div>
                <span asp-validation-for="PostImage" class="text-danger"></span>

            </div>
            </div>
             <div class="col-12">
            <div class="form-group">
                <label asp-for="PostContent" class="control-label"></label>
                <textarea asp-for="PostContent"  class="form-control" rows="6"></textarea>
                <span asp-validation-for="PostContent" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfParticipants" class="control-label"></label>
                <input asp-for="NumberOfParticipants" class="form-control" />
                <span asp-validation-for="NumberOfParticipants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="AdminId" type="hidden" value="1" class="form-control" />
                <span asp-validation-for="AdminId"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
            </div>
        </form>



          </div>
        </div>
        <!-- End of Main Content -->

        <my-footer></my-footer>
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    


    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/panel/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/panel/demo/chart-area-demo.js"></script>
    <script src="~/js/panel/demo/chart-pie-demo.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

  </body>
</html>
